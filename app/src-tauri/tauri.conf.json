{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Push-to-Talk STT",
  "version": "0.1.0",
  "identifier": "com.pushtotalk.stt",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "windows": {}
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "menuOnLeftClick": true
    },
    "windows": [
      {
        "title": "Push-to-Talk STT",
        "label": "main",
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "skipTaskbar": true,
        "maximized": false,
        "resizable": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
